import './Dice.css';
import { useState } from 'react';

function Dice() {

  let [number, setNumber] = useState(1)

  function roll()
  {
  	let random_num = Math.floor(Math.random * 7);
	setNumber(random_num);
  }
  return (
  	<button className="Dice" onClick={roll}>
		<p className="DiceNumber">{number}</p>
	</button>
  );
}

export default Dice;
